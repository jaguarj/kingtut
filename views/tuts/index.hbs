<h2>{{user.first_name}}'s TUTS!</h2>

<ul>
	{{#each user.tuts}}
	<br />
		<!-- <li><a href="/users/{{../user.id}}/tuts/{{this.id}}">{{this.name}}</a></li> -->
		<h2>{{this.name}}</h2>
		<br />
		<li><a href="{{this.link}}">{{this.link}}</a></li>
		<br />
		<a href="/users/{{../user.id}}/tuts/{{this.id}}/edit">Edit TUT</a>

